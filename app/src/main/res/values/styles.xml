<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="texttitle">
        <item name="android:textSize">@dimen/textSize_title</item>
        <item name="android:text">@string/nhietdotrong</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/bg_color</item>
        <item name="android:maxLength">10</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="tvngay_city">
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>


    <style name="toolbarMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
    </style>

    <style name="textviewcity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:text">_ _ _</item>
        <item name="android:textSize">@dimen/text_City</item>
    </style>

    <style name="textTemperature">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:text">_ _ _</item>
        <item name="android:textSize">42sp</item>
    </style>


    <style name="tvStyleONHIEM_USAQI" parent="Base.CardView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0.8</item>
        <item name="android:layout_width">200dp</item>

    </style>

    <style name="tvStyleONHIEM">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TieuDeONHIEM">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">Chỉ Số Ô Nhiễm US AQI</item>
    </style>

    <style name="iconOnhiem">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="EdtTim">
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">310dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BtTim">
        <item name="android:layout_margin">10dp</item>
        <item name="android:text">Tìm</item>
    </style>

    <style name="CF_dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="tv_temperature">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/maginTop_temperature_main</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textSize_temperature_main</item>
    </style>

    <style name="gach_tren_duoi_main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/vertical_relativeLayout</item>
    </style>

    <style name="delete_history">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tieu_de_chitiet">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="img_detail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">65dp</item>
    </style>

    <style name="Text_LinearLayout_detail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="hienthi_chitiet">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="hienthi_tieude_chitiet">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="img_back_timkiem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tieude_timkiem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft_city</item>
        <item name="android:text">Mời Chọn Thành Phố</item>

    </style>

    <style name="gach_doc2">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    <style name="tieude_lichsu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft_title_history</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/title_history</item>
        <item name="android:textSize">@dimen/textSize_title_history</item>
    </style>

</resources>