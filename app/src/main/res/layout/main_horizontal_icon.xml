<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_horizontal"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   >

    <TextView
        android:id="@+id/ngay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/text_horizontal"
        android:textColor="@color/black"
        />
    <ImageView
        android:id="@+id/icon_trangthai"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_Icon_img"
        android:layout_gravity="center"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/nhietdo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/Size_temperature_Icon"
        android:textColor="@color/black"
      />
    <TextView
        android:id="@+id/trangthai_chitiet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/text_horizontal"
        android:textColor="@color/black"/>

</LinearLayout>